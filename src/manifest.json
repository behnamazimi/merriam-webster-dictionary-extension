{
  "name": "Merriam Webster Dictionary",
  "version": "2.0",
  "description": "Open source Merriam-Webster's dictionary",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "shared/icons/16x16.png",
      "32": "shared/icons/32x32.png",
      "48": "shared/icons/48x48.png",
      "128": "shared/icons/128x128.png"
    }
  },
  "content_scripts": [
    {
      "run_at": "document_start",
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content/index.js"
      ]
    }
  ],
  "icons": {
    "16": "shared/icons/16x16.png",
    "32": "shared/icons/32x32.png",
    "48": "shared/icons/48x48.png",
    "128": "shared/icons/128x128.png"
  },
  "commands": {
    "_execute_action": {
    }
  },
  "manifest_version": 3
}
